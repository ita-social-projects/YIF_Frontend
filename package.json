{
  "name": "yif_frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.19.6",
    "@types/react": "^16.14.1",
    "@types/react-dom": "^16.9.10",
    "@types/react-leaflet": "^2.5.2",
    "@types/react-redux": "^7.1.11",
    "@types/react-router-dom": "^5.1.6",
    "formik": "^2.2.6",
    "jest-sonar-reporter": "^2.0.0",
    "leaflet": "^1.7.1",
    "react": "^17.0.1",
    "react-cropper": "^2.1.4",
    "react-dom": "^17.0.1",
    "react-leaflet": "^3.0.5",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.0",
    "sonarqube-scanner": "^2.8.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.8.3",
    "yup": "^0.32.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false --testResultsProcessor jest-sonar-reporter",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-frame-component": "^4.1.1",
    "@types/redux-mock-store": "^1.0.2",
    "fetch-mock": "^9.11.0",
    "husky": "^4.3.0",
    "jwt-decode": "^3.1.2",
    "lint-staged": "^10.5.2",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.14.1",
    "redux-mock-store": "^1.5.4",
    "ts-jest": "^26.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.(js|jsx|ts|tsx)": [
      "eslint",
      "npm test -- --coverage --watchAll=false --findRelatedTests"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage/reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/serviceWorker.ts",
      "!src/components/imageUploader/imageUploaderPopup/imageUploaderPopup.tsx",
      "!src/components/common/formElements/formInputMessage/formInputMessage.tsx",
      "!src/index.tsx"
    ]
  }
}

#!groovy
//  groovy Jenkinsfile
properties([disableConcurrentBuilds()])

pipeline  {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("Create docker image") { 
            steps {
                echo 'Creating docker image ...'
                dir('.'){
                    sh "docker build -t rominos71/YIF-project Docker_development . "
                }
            }
        }
    
             
        stage("docker run") {
           steps {
               echo " ============== docker run =================="
                     sh "docker run -d --restart=always --name YIF-project -p 80:3000 rominos71/YIF-project "
           }
        }

    }
}